{
  "name": "webgl-map",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "gaming.tools",
  "homepage": "https://gaming.tools",
  "description": "Minimal WebGL tile map with Express server",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "start": "npm -w gtmap-svelte-test run dev",
    "dev": "npm -w gtmap-svelte-test run dev",
    "build": "npm -w gtmap-svelte-test run build && npm -w @gaming.tools/gtmap run build",
    "preview": "npm -w gtmap-svelte-test run preview",
    "pkg:build": "npm -w @gaming.tools/gtmap run build",
    "pkg:typecheck": "npm -w @gaming.tools/gtmap run typecheck",
    "pkg:pack": "npm -w @gaming.tools/gtmap run pack",
    "lint": "eslint packages",
    "lint:fix": "eslint packages --fix",
    "format": "prettier -w \"packages/**/*\"",
    "format:check": "prettier -c \"packages/**/*\"",
    "fetch:svelte-docs": "node scripts/fetch-svelte-llm-docs.mjs",
    "docs:api": "node scripts/clean-docs.mjs && typedoc --options typedoc.json && node scripts/generate-api-index.mjs",
    "version:auto": "node scripts/version-auto.mjs --patch-only",
    "version:auto:commit": "node scripts/version-auto.mjs --patch-only --commit",
    "version:auto:detect": "node scripts/version-auto.mjs --detect",
    "version:auto:detect:commit": "node scripts/version-auto.mjs --detect --commit",
    "clean:packs": "node scripts/clean-packs.mjs",
    "publish:gtmap": "npm publish -w @gaming.tools/gtmap --access public",
    "release:gtmap": "npm run version:auto:commit && npm publish -w @gaming.tools/gtmap --access public",
    "release:gtmap:full": "npm run version:auto:commit && npm run pkg:pack && npm publish -w @gaming.tools/gtmap --access public"
  },
  "dependencies": {
    
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^15.9.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.41.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.0.0"
  }
}
