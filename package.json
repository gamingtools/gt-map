{
  "name": "webgl-map",
  "version": "0.1.0",
  "private": true,
  "description": "Minimal WebGL tile map with Express server",
  "scripts": {
    "start": "pnpm -C apps/gtmap-svelte-test dev",
    "dev": "pnpm -C apps/gtmap-svelte-test dev",
    "build": "pnpm -C apps/gtmap-svelte-test build && pnpm -C packages/gtmap build",
    "preview": "pnpm -C apps/gtmap-svelte-test preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "format:check": "prettier -c ."
  },
  "dependencies": {
    
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^15.9.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.41.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
