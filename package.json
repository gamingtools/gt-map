{
  "name": "webgl-map",
  "version": "0.1.0",
  "private": true,
  "description": "Minimal WebGL tile map with Express server",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "start": "npm -w gtmap-svelte-test run dev",
    "dev": "npm -w gtmap-svelte-test run dev",
    "build": "npm -w gtmap-svelte-test run build && npm -w gtmap run build",
    "preview": "npm -w gtmap-svelte-test run preview",
    "lint": "eslint packages",
    "lint:fix": "eslint packages --fix",
    "format": "prettier -w \"packages/**/*\"",
    "format:check": "prettier -c \"packages/**/*\""
  },
  "dependencies": {
    
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^15.9.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.41.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4"
  }
}
