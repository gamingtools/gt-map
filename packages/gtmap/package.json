{
	"name": "@gaming.tools/gtmap",
	"version": "0.2.7",
	"private": false,
	"license": "MIT",
	"author": "gaming.tools",
	"homepage": "https://gaming.tools",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.d.ts",
		"README.md",
		"LICENSE"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gamingtools/gt-map.git",
		"directory": "packages/gtmap"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/",
		"provenance": true
	},
	"scripts": {
		"clean": "node -e \"try{require('fs').rmSync('dist',{recursive:true,force:true})}catch(e){}\"",
		"build": "npm run clean && npm run build:types && npm run build:js",
		"build:types": "node -e \"try{require('fs').rmSync('tsconfig.tsbuildinfo',{force:true})}catch(e){}\" && tsc -p ./tsconfig.types.json",
		"build:js": "esbuild src/index.ts src/internal/layers/workers/cluster-worker.ts --bundle --format=esm --platform=browser --minify --splitting --outdir=dist --outbase=src --entry-names=[dir]/[name] --chunk-names=chunks/[name]-[hash]",
		"build:readable": "esbuild src/index.ts src/internal/layers/workers/cluster-worker.ts --bundle --format=esm --platform=browser --splitting --outdir=dist --outbase=src --entry-names=[dir]/[name].readable --chunk-names=chunks/[name]-[hash]",
		"typecheck": "tsc -p ./tsconfig.json --noEmit",
		"prepack": "npm run build && node -e \"const fs=require('fs'),p=require('path');try{fs.copyFileSync(p.resolve(__dirname,'..','..','LICENSE'), p.resolve(__dirname,'LICENSE'))}catch(e){}\"",
		"pack": "npm pack"
	},
	"devDependencies": {
		"esbuild": "^0.25.9"
	},
	"sideEffects": false
}
